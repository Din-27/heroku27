<html>
  <head>
    <title>Creating Blog Page</title>
    <link rel="stylesheet" href="../public/assets/css/blog detail.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body style="background-color: rgba(255, 255, 255, 0.234);">
      
 <nav>

        <img src="../public/assets/images/my-logo.png" alt="Logo" style="cursor: pointer;
            width: 90px;
            height: 40px;
            padding-left: 30px;
            padding-top: 10px;
            ">
  
            <div class="kiri">
                {{#if isLogin}}
                <ul>
                    <li> <a href="/register">Hi,{{user.name}}</a> </li>
                    <li class="blog"><a href="/login">Logout</a></li>
                    <!-- <li class="upload"><a href="upload.html">upload</a></li> -->
                </ul>
                {{else}}
                <ul>
                    <li> <a href="/register">Register</a> </li>
                    <li class="blog"><a href="/login">Login</a></li>
                    <!-- <li class="upload"><a href="upload.html">upload</a></li> -->
                </ul>
                {{/if}}
                <div class="mid">
                <ul>
                    <li> <a href="/">Home</a> </li>
                    <li class="blog"><a href="/blog">Blog</a></li>
                    <!-- <li class="upload"><a href="upload.html">upload</a></li> -->
                </ul>
                 </div>
            
            </div>
  
        <div class="kanan">
            <a href="/contact">Contact</a>
        </div>
  
    </nav>


      {{#if messages.success}}
        <div class="alert alert-success" role="alert">
            {{messages.success}}
        </div>
      {{/if}}
  

    <div class="blog">
      {{#if isLogin}}
      <div class="btn-create">
        <button><a style="text-decoration: none; color:white;" href="/add-blog">Create Blog</a></button>
      </div>
      {{/if}}

      <div id="contents" class="blog-list">
        
        {{#each blogs}}
        <div class="blog-list-item">
          <div class="blog-image">
            <img src="/upload/{{this.image}}" alt="" />
          </div>
          <div class="blog-content">

          {{#if isLogin}}
            <div class="btn-group">
              <a href="/edit/{{this.id}}" class="btn-edit" style="text-decoration: none; color:black; background-color:grey;">Edit Post</button>
              <a href="/delete-blog/{{this.id}}" class="btn-post" style="text-decoration: none;">Delete Blog</button>
            </div>
          {{/if}}

            <h1>
              <a href="/blog-detail/{{this.id}}" target="_blank">{{this.title}}</a>
            </h1>
            <div class="detail-blog-content">
              {{this.postAt}} | {{this.author}}
            </div>
            <p>
              {{this.content}}
            </p>

            <div style="text-align: right;">
                <span style="font-size: 10px; color: rgb(255, 255, 255)">
                  {{this.distance}}
                </span>
            </div>

          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </body>
</html>