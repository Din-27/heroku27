<html>
  <head>
    <title>Blog Page</title>
    <link rel="stylesheet" href="../public/assets/css/style-blog.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>
  <body>
 <nav>

        <img src="../public/assets/images/my-logo.png" alt="Logo" style="cursor: pointer;
            width: 90px;
            height: 40px;
            padding-left: 30px;
            padding-top: 10px;
            ">
  
            <div class="kiri">
                {{#if isLogin}}
                <ul>
                    <li> <a href="/register">Hi,{{user.name}}</a> </li>
                    <li class="blog"><a href="/login">Logout</a></li>
                    <!-- <li class="upload"><a href="upload.html">upload</a></li> -->
                </ul>
                {{else}}
                <ul>
                    <li> <a href="/register">Register</a> </li>
                    <li class="blog"><a href="/login">Login</a></li>
                    <!-- <li class="upload"><a href="upload.html">upload</a></li> -->
                </ul>
                {{/if}}
                <div class="mid">
                <ul>
                    <li> <a href="/">Home</a> </li>
                    <li class="blog"><a href="/blog">Blog</a></li>
                    <!-- <li class="upload"><a href="upload.html">upload</a></li> -->
                </ul>
                 </div>
            
            </div>
  
        <div class="kanan">
            <a href="/contact">Contact</a>
        </div>
  
    </nav>

      {{#if messages.danger}}
        <div class="alert alert-danger" role="alert">
            {{messages.danger}}
        </div>
      {{/if}}

    <div class="blog">

      

      <div class="blog-form">
        <div class="form-container">
          <form action="/login" method="post">
            <h1 style="border-radius: 10px;
            color: white;
            text-shadow: 0px 0px 5px rgba(0, 0, 0, 0.829);
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.829);"
            >Login</h1>
            <div>
              <label for="inputEmail">Email</label>
              <input id="inputEmail" name="inputEmail" />
            </div>
            <div>
              <label for="inputPassword">Password</label>
              <input type="password" id="inputPassword" name="inputPassword" />
            </div>
           
            <div class="button-group">
              <button style="text-shadow: 0px 0px 5px rgba(0, 0, 0, 0.829);
              box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.829);" type="submit">Login</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <script src="../public/assets/js/web-blog.js"></script>
  </body>
</html>