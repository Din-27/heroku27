    <h1 class="title">Tell us about your problem below !</h1>

    <form>

        <div>
            <label for="name">Name</label>
            <input id="name" type="text" class="name">
        </div>

        <div>
            <label for="email">Email</label>
            <input id="email" type="email" class="email">
        </div>

        <div>
            <label for="phone">Phone Number</label>
            <input id="phone" type="number">
        </div>


        <div>
            <label for="subject">Subject</label>
            <select id="subject">
                <option>Privacy Policy</option>
                <option>Problem With Our Site</option>
            </select>
        </div>


        <div>
            <p style="margin: 5px 0px; font-size: 20px;
            font-size: 30px">Problem</p>
            <div style="font-size: 15px;">
                <ul>
                    <li  style="margin: -20px;">
                        <div class="checkbox">
                            <label class="html" for="skillHtml">HTML</label>
                            <input type="checkbox" id="skillHtml" value="HTML">
                        </div>
                    </li>
                    <li style="margin: -20px;">
                        <div>
                        <label class="css" for="skillCss">CSS</label>
                        <input type="checkbox" id="skillCss" value="CSS">
                    </div>
                    </li>
                </ul>
            </div>
        </div>

        <div>
            <label for="message">Your Message</label>
            <textarea id="message" style="resize: none;"></textarea>
        </div>

        <button type="button" onclick="submitData()">
        <a href="mailto:herdiyanafirmansyah27@gmail.com?subject=Test subject&body=Hallo Nama Saya" style="color: white;">Submit</a></button>
    </form>



